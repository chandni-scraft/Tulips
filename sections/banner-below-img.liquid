{% schema %}
{
  "name": "Banner Wavy",
  "settings": [
    {
      "type": "image_picker",
      "id": "wave_image",
      "label": "Upload Wavy Image"
    }
  ],
  "presets": [
    {
      "name": "Banner Wavy",
      "category": "Image"
    }
  ]
}
{% endschema %}

<div class="banner-wave-container">
  {% if section.settings.wave_image %}
    <img
      src="{{ section.settings.wave_image | img_url: 'master' }}"
      alt="Wavy Design"
      class="banner-wave"
    >
  {% endif %}
</div>

<style>
  .banner-wave-container {
    position: absolute;
    width: 100%;
    z-index: 1;
  }

  .banner-wave {
    width: 100%;
    display: block;
    margin-top: -1.35%;
    height: auto;
  }

  /* Media Queries */

  /* Tablet adjustments (between 769px and 1024px) */
  @media (min-width: 769px) {
    .banner-wave-container {
      margin-top: -35px; /* Adjust for tablet screens */
    }

    .banner-wave {
      width: 100%;
    }
  }

  /* Mobile adjustments (up to 768px) */
  @media (max-width: 768px) {
    .banner-wave-container {
      margin-top: -15px; /* Slight adjustment for mobile */
    }

    .banner-wave {
      width: 100%;
    }
  }

  /* Extra small screens (up to 480px) */
  @media (max-width: 480px) {
    .banner-wave-container {
      margin-top: -5px; /* More precise fix for very small devices */
    }

    .banner-wave {
      width: 100%;
      margin-top: -3%; /* Prevents awkward cutoffs */
    }
  }

  /* Medium devices (tablets, 768px to 1023px) */
  @media (min-width: 768px) and (max-width: 1023px) {
    .banner-wave-container {
      margin-top: -15px; /* Slight adjustment for mobile */
    }

    .banner-wave {
      width: 100%;
      margin-top: -2%;
    }
  }

  /* Large devices (laptops/desktops, 1024px to 1279px) */
  @media (min-width: 1024px) and (max-width: 1279px) {
    .banner-wave {
      width: 100%;
      margin-top: -1.1%;
    }
  } /* ‚Üê This closing brace was missing */

  /* Extra large devices (large desktops, 1280px and above) */
  @media (min-width: 1280px) {
    .banner-wave {
      width: 100%;
      margin-top: -1.1%;
    }
  }

  @media (min-width: 1600px) {
    .banner-wave {
      width: 100%;
      display: block;
      margin-top: -2%;
      height: auto;
    }
  }
</style>
