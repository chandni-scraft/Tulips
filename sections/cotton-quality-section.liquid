<style>
  .cotton-quality-wrapper {
    padding: 40px 20px;
    background-color: #fff;
  }

  .cotton-quality-container {
    display: flex;
    flex-wrap: nowrap;
    align-items: stretch;
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .cotton-quality-image {
    flex: 1 1 40%;
  }

  .cotton-quality-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 12px;
  }

  .cotton-quality-content {
    flex: 1 1 55%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .main-heading {
    font-size: 28px;
    font-weight: bold;
    margin-bottom: 20px;
    color: {{ section.settings.main_heading_color }};
  }

  .main-bullets {
    list-style: none;
    padding-left: 0;
    margin-bottom: 20px;
  }

  .main-bullets li {
     font-size: 16px;
    margin-bottom: 10px;
    line-height: 1.6;
  }

  .sub-heading {
    font-size: 22px;
    font-weight: bold;
    margin-top: 20px;
    color: {{ section.settings.sub_heading_color }};
    margin-bottom: 20px;
  }

  .info-pairs {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .info-pair h4 {
    font-size: 18px;
    font-weight: 600;
    margin: 0;
    color: {{ section.settings.subpoint_heading_color }};
  }

  .info-pair p {
    margin: 0;
    font-size: 16px;
    line-height: 1.5;
    color: #333;
  }

  @media screen and (max-width: 768px) {
    .cotton-quality-container {
      flex-direction: column;
      flex-wrap: wrap;
    }

    .cotton-quality-image img {
      height: auto;
    }
  }
</style>



  {%- style -%}
    #shopify-section-{{ section.id }} > div {
      padding-block-start: calc(var(--section-spacing-unit-size) * {{ section.settings.spacing_top }});
      padding-block-end: calc(var(--section-spacing-unit-size) * {{ section.settings.spacing_bottom }});
    }
  {%- endstyle -%}
