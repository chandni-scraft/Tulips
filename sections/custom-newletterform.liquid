<section class="subscribe-instagram">
  <div class="subscribe">
    <p>Subscribe to <span>our newsletter</span> and get updates on <span>new arrival</span></p>

    <!-- ðŸ›  Cleaned-up and working subscription form -->
    <form method="post" action="/contact#subscribe-success" class="subscribe-box">
      <input type="hidden" name="form_type" value="customer">
      <input type="hidden" name="utf8" value="âœ“">
      <input name="contact[email]" type="email" placeholder="your email address" required>
      <button type="submit">Subscribe</button>
    </form>

    <!-- âœ… Optional success message -->
    {% if form.posted_successfully? %}
      <p id="subscribe-success" class="success-message">Thank you for subscribing!</p>
    {% endif %}
  </div>

  <!-- Divider Line -->
  <div class="divider">&nbsp;</div>

  <div class="instagram">
    <h5 style="color:#F0652F;">Follow us on Instagram</h5>
    <div class="instagram-grid">
      {% for i in (1..4) %}
        {% assign image_id = 'instagram_image_' | append: i %}
        {% assign link_id = 'instagram_link_' | append: i %}
        {% if section.settings[image_id] != blank %}
          <div class="insta-img">
            <a href="{{ section.settings[link_id] }}" target="_blank" rel="noopener noreferrer">
              <img src="{{ section.settings[image_id] | img_url: '200x200' }}" alt="Instagram Post">
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

