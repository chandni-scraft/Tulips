{%- style -%}
  #shopify-section-{{ section.id }} > div {
    padding-block-start: calc(var(--section-spacing-unit-size) * {{ section.settings.spacing_top }});
    padding-block-end: calc(var(--section-spacing-unit-size) * {{ section.settings.spacing_bottom }});
  }
  /* Hide bottom navigation arrows (center variant) */
  .swiper-buttons--center-{{ section.id }} {
    display: none !important;
  }

  /* ---------- NEW: Background styling for arrow buttons ---------- */
  #shopify-section-{{ section.id }} .swiper-buttons .swiper-button {
    background: rgba(0,0,0,0.5);          /* subtle dark bg */
    backdrop-filter: saturate(120%) blur(2px);
    width: 42px;
    height: 42px;
    border-radius: 999px;
    border: 1px solid rgba(255,255,255,0.35);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: transform .15s ease, background .15s ease, border-color .15s ease;
  }
  #shopify-section-{{ section.id }} .swiper-buttons .swiper-button svg {
    width: 18px;
    height: 18px;
  }
  #shopify-section-{{ section.id }} .swiper-buttons .swiper-button:hover {
    background: rgba(0,0,0,0.65);
    border-color: rgba(255,255,255,0.6);
    transform: translateY(-1px);
  }
  #shopify-section-{{ section.id }} .swiper-buttons .swiper-button:focus-visible {
    outline: 2px solid #ffffff;
    outline-offset: 2px;
  }
  /* -------------------------------------------------------------- */

  /* Fixed width for Buy Now button in featured products */
  #shopify-section-{{ section.id }} .shopify-payment-button__button {
    width: 152.45px !important;
    flex: 0 0 152.45px !important;
    display: inline-block;
    text-align: center;
  }
  
  @media screen and (max-width: 750px) {
    #shopify-section-{{ section.id }} .shopify-payment-button__button {
      width: 148.45px !important;
    }
  }

  /* Custom Button Colors for Section {{ section.id }} */
  {% if section.settings.button_color_scheme == 'custom' %}
    #shopify-section-{{ section.id }} .collection-buttons-custom .custom_styled_button {
      color: {{ section.settings.custom_add_to_cart_text }} !important;
      border-color: {{ section.settings.custom_add_to_cart_outline }} !important;
    }
    #shopify-section-{{ section.id }} .collection-buttons-custom .custom_styled_button:hover {
      background: {{ section.settings.custom_add_to_cart_outline }} !important;
      color: #ffffff !important;
    }
    #shopify-section-{{ section.id }} .collection-buttons-custom .custom_styled_button svg path {
      stroke: {{ section.settings.custom_add_to_cart_outline }} !important;
    }
    #shopify-section-{{ section.id }} .collection-buttons-custom .custom_styled_button:hover svg path {
      stroke: #ffffff !important;
    }
    #shopify-section-{{ section.id }} .collection-buttons-custom .shopify-payment-button__button {
      background: {{ section.settings.custom_buy_now_bg }} !important;
      color: {{ section.settings.custom_buy_now_text }} !important;
      border: 2px solid {{ section.settings.custom_buy_now_outline }} !important;
    }
    #shopify-section-{{ section.id }} .collection-buttons-custom .shopify-payment-button__button:hover {
      background: transparent !important;
      color: #a4c86e !important;
      border: 2px solid #a4c86e !important;
    }
  {% endif %}
{%- endstyle -%}

{%- assign arrow_type = settings.arrow_type -%}

{%- liquid
  if section.blocks.size > 0
    assign products_array = true
  else
    assign products_array = blank
  endif
-%}
{%- if section.settings.enable_new_styles -%}
  {{- 'collection-button-schemes.css' | asset_url | stylesheet_tag -}}
{%- endif -%}
{%- if products_array != null -%}
  {{- 'component-card-product-slider.css' | asset_url | stylesheet_tag -}}
  {%- render 'css', css: 'component-card-product.css' -%}

  <script src="{{- 'card-product-slider.js' | asset_url -}}" defer="defer"></script>
  <script src="{{- 'tab-manager.js' | asset_url -}}" defer="defer"></script>

  {%- assign section_button = blank -%}
  {%- if section.settings.button_label != blank -%}
    {%- capture section_button -%}
      {%- render 'button',
        type: 'link',
        class: 'button custom_class',
        button_style: section.settings.button_style,
        value: section.settings.button_label,
        href: section.settings.button_link
      -%}
    {%- endcapture -%}
  {%- endif -%}

  <div class="color-{{ section.settings.color_scheme }} gradient">
    <div
      class="section section-featured-products section-w-swiper product-feed overflow-hidden js-animation-fade-in {{ section.settings.layout }}"
      data-section-id="{{- section.id -}}"
    >
      <div class="container containernew {{ section.settings.section_width }}">
        {%- if section.settings.heading != blank or section_button != blank -%}
          <div class="section__head">
            <div class="section__head-title">
              {%- if section.settings.subheading != blank -%}
                <span class="text--label rte">{{- section.settings.subheading -}}</span>
              {%- endif -%}
              {%- if section.settings.heading != blank -%}
                <h2 class="section__heading {{ section.settings.heading_size }}">{{- section.settings.heading -}}</h2>
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}

        <div class="section__body">
          {% comment %} Collect all products from all blocks into one array {% endcomment %}
          {%- assign all_products = blank -%}
          {%- for block in section.blocks -%}
            {% liquid
              assign block_products = false
              if block.settings.collection != blank
                assign selected_collection = collections[block.settings.collection.handle]
                assign block_products = selected_collection.products
              elsif block.settings.products != blank
                assign block_products = block.settings.products
              elsif block.settings.vendor != blank
                assign collection_of_all_handle = block.settings.collection_of_products | handleize
                assign block_products = collections[collection_of_all_handle].all_products | where: 'vendor', block.settings.vendor
              endif

              if block_products
                unless block.settings.show_unavailable_products
                  assign block_products = block_products | where: 'available'
                endunless
                
                if all_products == blank
                  assign all_products = block_products
                else
                  assign all_products = all_products | concat: block_products
                endif
              endif
            %}
          {%- endfor -%}

          <div>
            <card-product-slider
              class="swiper card-product-slider {% if section.settings.enable_slideshow_overflow %}overflow-unset{% endif %}"
              data-section-id="{{- section.id -}}"
              data-swiper-options='
                {
                  "sectionName": "featured-products",
                  "sectionId": "{{ section.id }}",
                  "spaceBetweenDesktop": {{ settings.spacing_desktop | times: 10 | round: 0 }},
                  "spaceBetweenMobile": {{ settings.spacing_mobile | times: 10 | round: 0 }},
                  "loop": true,

                  /* --------- UPDATED: swipe/jump 4 products per swipe --------- */
                  "slidesPerGroup": 4,
                  "speed": 500,
                  "breakpoints": {
                    "0":   { "slidesPerGroup": 1 },
                    "750": { "slidesPerGroup": 2 },
                    "990": { "slidesPerGroup": 4 }
                  },
                  /* ---------------------------------------------------------------- */

                  {% if section.settings.show_navigation_arrows %} "navigation": {
                    "prevEl": ".swiper-button--prev-{{ section.id }}",
                    "nextEl": ".swiper-button--next-{{ section.id }}"
                  }{% endif %}
                  {% if section.settings.slideshow_autoplay_interval > 0 %},
                    "autoplay": {
                      "delay": {{ section.settings.slideshow_autoplay_interval | times: 1000 }}
                    }
                  {% elsif section.settings.slideshow_autoplay_interval == 0 %}
                    , "autoplay": false
                  {% endif %}
                }
              '
            >
              <div class="swiper-wrapper card-product-slider__wrapper">
                {%- if all_products != blank -%}
                  {%- assign count = 0 -%}
                  {%- for product in all_products -%}
                    {%- if count < section.settings.max_products -%}
                      {%- if section.settings.product_filter == 'discounted' -%}
                        {%- if product.compare_at_price_max > product.price -%}
                          <div class="swiper-slide card-product-slider__slide">
                            {% render 'card-product', product_ref: product, section_id: section.id %}
                          </div>
                          {%- assign count = count | plus: 1 -%}
                        {%- endif -%}
                      {%- else -%}
                        <div class="swiper-slide card-product-slider__slide">
                          {% render 'card-product', product_ref: product, section_id: section.id %}
                        </div>
                        {%- assign count = count | plus: 1 -%}
                      {%- endif -%}
                    {%- endif -%}
                  {%- endfor -%}
                {%- else -%}
                  {%- for i in (1..section.settings.max_products) -%}
                    <div class="swiper-slide card-product-slider__slide">
                      {% render 'card-product', product_ref: product, section_id: section.id %}
                    </div>
                  {%- endfor -%}
                {%- endif -%}
              </div>
            </card-product-slider>
          </div>
        </div>

        <div class="section__foot">
          <div class="section__head--buttons">
            {{ section_button | replace_first: 'custom_class' }}
            {% if section.settings.show_navigation_arrows %}
              {% if section.settings.layout == 'layout-2' %}
                {%- assign icon_arrow = 'theme-arrow' -%}
              {% else %}
                {%- assign icon_arrow = 'theme-chevron' -%}
              {% endif %}

              <div class="swiper-buttons small-hide card-slider__buttons no-js-hidden">
                <button
                  class="swiper-button {% if arrow_type == 'plain' %}swiper-button--plain{% endif %} swiper-button--prev-{{ section.id }}"
                  aria-label="{{- 'theme.actions.previous' | t -}}"
                >
                  {%- render 'icon', icon_name: icon_arrow -%}
                </button>
                <button
                  class="swiper-button {% if arrow_type == 'plain' %}swiper-button--plain{% endif %} swiper-button--next-{{ section.id }}"
                  aria-label="{{- 'theme.actions.next' | t -}}"
                >
                  {%- render 'icon', icon_name: icon_arrow -%}
                </button>
              </div>
            {% endif %}
          </div>
        </div>

      </div>
    </div>
  </div>
{%- endif -%}


