      {% if section.settings.footer_logo != blank %}
        <img src="{{ section.settings.footer_logo | img_url: '180x' }}" alt="{{ shop.name }}" class="footer-logo">
      {% endif %}
      <div class="social-icons" aria-label="Social media links">
        <a href="https://www.facebook.com/tulipshygiene/" target="_blank" rel="noopener" aria-label="Facebook" title="Facebook">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M22 12.073C22 6.505 17.523 2 12 2S2 6.505 2 12.073C2 17.094 5.657 21.245 10.438 22v-6.997H7.898v-2.93h2.54V9.845c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.196 2.238.196v2.47h-1.26c-1.243 0-1.63.776-1.63 1.57v1.886h2.773l-.443 2.93h-2.33V22C18.343 21.245 22 17.094 22 12.073z"/>
          </svg>
        </a>
        <a href="https://www.instagram.com/tulipshygiene/" target="_blank" rel="noopener" aria-label="Instagram" title="Instagram">
