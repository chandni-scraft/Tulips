{% schema %}
{
  "name": "Footer Settings",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_wave_image",
      "label": "Footer Wavy Image"
    },
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer Logo"
    },
    {
      "type": "textarea",
      "id": "footer_description",
      "label": "Footer Description"
    },
    {
      "type": "text",
      "id": "menu_5_heading",
      "label": "Menu 5 Heading",
      "default": "Customer care"
    },
    {
      "type": "color",
      "id": "footer_bg_color",
      "label": "Footer Background Color",
      "default": "#F0652F"
    },
    {
      "type": "color",
      "id": "footer_text_color",
      "label": "Footer Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "footer_link_hover_color",
      "label": "Footer Link Hover Color",
      "default": "#111111"
    },
    {
      "type": "text",
      "id": "menu_1_heading",
      "label": "Menu 1 Heading",
      "default": "Category"
    },
    {
      "type": "link_list",
      "id": "menu_1",
      "label": "Menu 1"
    },
    {
      "type": "text",
      "id": "menu_2_heading",
      "label": "Menu 2 Heading",
      "default": "Legal"
    },
    {
      "type": "link_list",
      "id": "menu_2",
      "label": "Menu 2"
    },
    {
      "type": "text",
      "id": "menu_3_heading",
      "label": "Menu 3 Heading",
      "default": "Quick Links"
    },
    {
      "type": "link_list",
      "id": "menu_3",
      "label": "Menu 3"
    }
  ],
  "presets": [
    {
      "name": "Custom Footer",
      "category": "Footer",
      "settings": {
        "footer_description": "Where grooming transcends routine to become a refined ritual, offering a complete experience of luxury and sophistication."
      }
    }
  ]
}
{% endschema %}

