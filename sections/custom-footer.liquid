<style>
  .footer {
    padding: 30px 50px 20px;
    background-color: #F0652F;
    color: white;
  }

  .footer-container {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    max-width: 1200px;
    margin: 0 auto;
    align-items: flex-start;
    gap: 40px;
  }

  .footer-brand {
    display: flex;
    gap: 40px;
    max-width: 500px;
    flex-direction: column;
    align-items: flex-start;
  }

  .footer-logo {
    width: 150px;
    height: auto;
    margin-bottom: 15px;
  }

  .social-icons {
    display: flex;
    gap: 12px;
    margin-top: 4px;
  }

  .social-icons a {
    color: {{ section.settings.footer_text_color }};
    display: inline-flex;
    line-height: 1;
  }

  .social-icons a:hover {
    color: {{ section.settings.footer_link_hover_color }};
  }

  .footer-desc {
    font-size: 15px;
    line-height: 1.8;
    max-width: 480px;
    opacity: 0.9;
    padding-top: 10px;
  }
.abc{
padding-right: 35px;
    min-width: 400px !important;
}
  /* collapsible logic */
  .footer-links .footer-desc,
  .footer-links ul {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .footer-links.active .footer-desc,
  .footer-links.active ul {
    max-height: 400px;
    padding-top: 10px;
  }

  .footer-links-wrapper {
    display: flex;
    gap: 40px;
  }

  .footer-links {
    flex: 1;
    min-width: 150px;
  }

  .footer-links h5 {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 16px;
    font-weight: bold;
    margin: 0;
    color: white;
  }

  .footer-links ul {
    list-style: none;
    padding: 0;
  }

  .footer-links ul li a {
    text-decoration: none;
    color: white;
    font-size: 14px;
    transition: color 0.3s ease, opacity 0.3s ease;
  }

  .footer-links ul li a:hover {
    color: #FFD700;
    opacity: 0.8;
  }

  /* desktop: always expanded */
  @media (min-width: 769px) {
    .footer-links .footer-desc,
    .footer-links ul {
      max-height: none !important;
      overflow: visible !important;
      transition: none !important;
      padding-top: 0 !important;
    }

    .footer-links h5 .toggle-icon {
      display: none !important;
    }

    .footer-links h5 {
      cursor: default;
    }
  }

  /* mobile: show toggle */
  @media (max-width: 768px) {

    .abc{
      padding-right: 0px;
    min-width: 300px;
        padding-bottom: 20px;
    }
    .footer-container{
    justify-content: center;
    }
    .footer-brand {
      align-items: center;
    }
    .footer-links h5 .toggle-icon {
      display: inline-block;
    }
    .footer-links h5 {
      cursor: pointer;
    }
    .footer-links-wrapper {
      flex-direction: column;
      gap: 10px;
      width: 100%;
    }
  }
</style>

<script>
(function () {
  const MOBILE_QUERY = '(max-width: 768px)';
  let lastMatch = null;

  function setUpForMobile(sections) {
    sections.forEach(section => {
      section.classList.remove('active');
      const header = section.querySelector('h5');
      const icon = header && header.querySelector('.toggle-icon');
      if (icon) icon.textContent = '+';
      if (!header._footerToggleHandler) {
        header._footerToggleHandler = function (e) {
          if (e.target.tagName.toLowerCase() === 'a') return;
          section.classList.toggle('active');
          if (icon) icon.textContent = section.classList.contains('active') ? 'Ã—' : '+';
        };
        header.addEventListener('click', header._footerToggleHandler);
      }
    });
  }

  function setUpForDesktop(sections) {
    sections.forEach(section => {
      section.classList.add('active');
      const header = section.querySelector('h5');
      const icon = header && header.querySelector('.toggle-icon');
      if (icon) icon.textContent = '';
      if (header && header._footerToggleHandler) {
        header.removeEventListener('click', header._footerToggleHandler);
        delete header._footerToggleHandler;
      }
    });
  }

  function init() {
    const mq = window.matchMedia(MOBILE_QUERY);
    const sections = Array.from(document.querySelectorAll('.footer-links'));
    if (lastMatch === mq.matches) return;
    lastMatch = mq.matches;
    if (mq.matches) {
      setUpForMobile(sections);
    } else {
      setUpForDesktop(sections);
    }
  }

  document.addEventListener('DOMContentLoaded', init);
  window.addEventListener('resize', init);
})();
</script>
