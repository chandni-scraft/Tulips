{% schema %}
{
  "name": "Footer Settings",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_wave_image",
      "label": "Footer Wavy Image"
    },
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer Logo"
    },
    {
      "type": "textarea",
      "id": "footer_description",
      "label": "Footer Description"
    },
    {
      "type": "text",
      "id": "menu_5_heading",
      "label": "Menu 5 Heading",
      "default": "Customer care"
    },
    {
      "type": "color",
      "id": "footer_bg_color",
      "label": "Footer Background Color",
      "default": "#F0652F"
    },
    {
      "type": "color",
      "id": "footer_text_color",
      "label": "Footer Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "footer_link_hover_color",
      "label": "Footer Link Hover Color",
      "default": "#111111"
    },
    {
      "type": "text",
      "id": "menu_1_heading",
      "label": "Menu 1 Heading",
      "default": "Category"
    },
    {
      "type": "link_list",
      "id": "menu_1",
      "label": "Menu 1"
    },
    {
      "type": "text",
      "id": "menu_2_heading",
      "label": "Menu 2 Heading",
      "default": "Legal"
    },
    {
      "type": "link_list",
      "id": "menu_2",
      "label": "Menu 2"
    },
    {
      "type": "text",
      "id": "menu_3_heading",
      "label": "Menu 3 Heading",
      "default": "Quick Links"
    },
    {
      "type": "link_list",
      "id": "menu_3",
      "label": "Menu 3"
    }
  ],
  "presets": [
    {
      "name": "Custom Footer",
      "category": "Footer",
      "settings": {
        "footer_description": "Where grooming transcends routine to become a refined ritual, offering a complete experience of luxury and sophistication."
      }
    }
  ]
}
{% endschema %}

<footer
  class="footer"
  style="background-color: {{ section.settings.footer_bg_color }}; color: {{ section.settings.footer_text_color }};"
>
  <div class="footer-container">
    <!-- Left Section (Logo) -->
    <div class="footer-brand">
      {% if section.settings.footer_logo != blank %}
        <img src="{{ section.settings.footer_logo | img_url: '180x' }}" alt="{{ shop.name }}" class="footer-logo">
      {% endif %}
    </div>

    <!-- Right Section (Description + Menus) -->
    <div class="footer-links-wrapper">

      <!-- Description block -->
      <div class="footer-links abc" >
        <h5>
          <span class="heading-text">{{ section.settings.menu_5_heading }}</span>
          <span class="toggle-icon">+</span>
        </h5>
        <div class="footer-desc" >
          <p>{{ section.settings.footer_description }}</p>
        </div>
      </div>

      <!-- Menu 1 -->
      <div class="footer-links">
        <h5>
          <span class="heading-text">{{ section.settings.menu_1_heading }}</span>
          <span class="toggle-icon">+</span>
        </h5>
        {% if section.settings.menu_1 %}
          <ul>
            {% for link in linklists[section.settings.menu_1].links %}
              <li>
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <!-- Menu 2 -->
      <div class="footer-links">
        <h5>
          <span class="heading-text">{{ section.settings.menu_2_heading }}</span>
          <span class="toggle-icon">+</span>
        </h5>
        {% if section.settings.menu_2 %}
          <ul>
            {% for link in linklists[section.settings.menu_2].links %}
              <li>
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <!-- Menu 3 -->
      <div class="footer-links">
        <h5>
          <span class="heading-text">{{ section.settings.menu_3_heading }}</span>
          <span class="toggle-icon">+</span>
        </h5>
        {% if section.settings.menu_3 %}
          <ul>
            {% for link in linklists[section.settings.menu_3].links %}
              <li>
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>

    </div>
  </div>
</footer>

<style>
  .footer {
    padding: 30px 50px 20px;
    background-color: #F0652F;
    color: white;
  }

  .footer-container {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    max-width: 1200px;
    margin: 0 auto;
    align-items: flex-start;
    gap: 40px;
  }

  .footer-brand {
    display: flex;
    gap: 40px;
    max-width: 500px;
  }

  .footer-logo {
    width: 150px;
    height: auto;
    margin-bottom: 15px;
  }

  .footer-desc {
    font-size: 15px;
    line-height: 1.8;
    max-width: 480px;
    opacity: 0.9;
    padding-top: 10px;
  }
.abc{
padding-right: 35px;
    min-width: 400px !important;
}
  /* collapsible logic */
  .footer-links .footer-desc,
  .footer-links ul {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .footer-links.active .footer-desc,
  .footer-links.active ul {
    max-height: 400px;
    padding-top: 10px;
  }

  .footer-links-wrapper {
    display: flex;
    gap: 40px;
  }

  .footer-links {
    flex: 1;
    min-width: 150px;
  }

  .footer-links h5 {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 16px;
    font-weight: bold;
    margin: 0;
    color: white;
  }

  .footer-links ul {
    list-style: none;
    padding: 0;
  }

  .footer-links ul li a {
    text-decoration: none;
    color: white;
    font-size: 14px;
    transition: color 0.3s ease, opacity 0.3s ease;
  }

  .footer-links ul li a:hover {
    color: #FFD700;
    opacity: 0.8;
  }

  /* desktop: always expanded */
  @media (min-width: 769px) {
    .footer-links .footer-desc,
    .footer-links ul {
      max-height: none !important;
      overflow: visible !important;
      transition: none !important;
      padding-top: 0 !important;
    }

    .footer-links h5 .toggle-icon {
      display: none !important;
    }

    .footer-links h5 {
      cursor: default;
    }
  }

  /* mobile: show toggle */
  @media (max-width: 768px) {

    .abc{
      padding-right: 0px;
    min-width: 300px;
        padding-bottom: 20px;
    }
    .footer-container{
    justify-content: center;
    }
    .footer-links h5 .toggle-icon {
      display: inline-block;
    }
    .footer-links h5 {
      cursor: pointer;
    }
    .footer-links-wrapper {
      flex-direction: column;
      gap: 10px;
      width: 100%;
    }
  }
</style>

<script>
(function () {
  const MOBILE_QUERY = '(max-width: 768px)';
  let lastMatch = null;

  function setUpForMobile(sections) {
    sections.forEach(section => {
      section.classList.remove('active');
      const header = section.querySelector('h5');
      const icon = header && header.querySelector('.toggle-icon');
      if (icon) icon.textContent = '+';
      if (!header._footerToggleHandler) {
        header._footerToggleHandler = function (e) {
          if (e.target.tagName.toLowerCase() === 'a') return;
          section.classList.toggle('active');
          if (icon) icon.textContent = section.classList.contains('active') ? 'Ã—' : '+';
        };
        header.addEventListener('click', header._footerToggleHandler);
      }
    });
  }

  function setUpForDesktop(sections) {
    sections.forEach(section => {
      section.classList.add('active');
      const header = section.querySelector('h5');
      const icon = header && header.querySelector('.toggle-icon');
      if (icon) icon.textContent = '';
      if (header && header._footerToggleHandler) {
        header.removeEventListener('click', header._footerToggleHandler);
        delete header._footerToggleHandler;
      }
    });
  }

  function init() {
    const mq = window.matchMedia(MOBILE_QUERY);
    const sections = Array.from(document.querySelectorAll('.footer-links'));
    if (lastMatch === mq.matches) return;
    lastMatch = mq.matches;
    if (mq.matches) {
      setUpForMobile(sections);
    } else {
      setUpForDesktop(sections);
    }
  }

  document.addEventListener('DOMContentLoaded', init);
  window.addEventListener('resize', init);
})();
</script>
