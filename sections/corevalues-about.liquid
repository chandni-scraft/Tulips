{% schema %}
{
  "name": "Research Section",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Our Core Values"
    },
    {
      "type": "textarea",
      "id": "section_subtext",
      "label": "Section Subtext",
      "default": "We seek a world where our products are made with care and delivered to everyone for a healthy, hygienic experience. While progressing towards attaining economic growth as an organization, we keep a check on our social responsibility."
    },
    {
      "type": "image_picker",
      "id": "precision_medicine_icon",
      "label": "Precision Medicine Icon"
    },
    {
      "type": "text",
      "id": "precision_medicine_title",
      "label": "Precision Medicine Title",
      "default": "Precision Medicine"
    },
    {
      "type": "textarea",
      "id": "precision_medicine_desc",
      "label": "Precision Medicine Description",
      "default": "Fund research that uses genetic biomarkers to create targeted therapies, improving remission rates and reducing relapse risk."
    },
    {
      "type": "image_picker",
      "id": "early_detection_icon",
      "label": "Early Detection Icon"
    },
    {
      "type": "text",
      "id": "early_detection_title",
      "label": "Early Detection Title",
      "default": "Early Detection"
    },
    {
      "type": "textarea",
      "id": "early_detection_desc",
      "label": "Early Detection Description",
      "default": "Enable faster diagnosis with blood tests for the PML-RARA fusion gene, reducing time to treatment and saving lives."
    },
    {
      "type": "image_picker",
      "id": "immunotherapy_icon",
      "label": "Immunotherapy Icon"
    },
    {
      "type": "text",
      "id": "immunotherapy_title",
      "label": "Immunotherapy Title",
      "default": "Immunotherapy"
    },
    {
      "type": "textarea",
      "id": "immunotherapy_desc",
      "label": "Immunotherapy Description",
      "default": "Explore treatments that leverage the immune system to fight leukemia cells, reducing dependence on chemotherapy and minimizing side effects."
    }
  ],
  "presets": [
    {
      "name": "Research Section"
    }
  ]
}
{% endschema %}
<section class="our-core-values">
  <h3 class="our-core-values-heading">{{ section.settings.section_heading }}</h3>
  <p class="our-core-values-subtext">
    {{ section.settings.section_subtext }}
  </p>

  <div class="our-core-values-container">
    <div class="our-core-values-card">
      <div class="our-core-values-header">
        {% if section.settings.precision_medicine_icon != blank %}
          <img
            src="{{ section.settings.precision_medicine_icon | img_url: 'master' }}"
            alt="{{ section.settings.precision_medicine_title }}"
            class="our-core-values-icon"
          >
        {% endif %}
        <h5 class="our-core-values-title title1">{{ section.settings.precision_medicine_title }}</h5>
      </div>
      <p>{{ section.settings.precision_medicine_desc }}</p>
    </div>

    <div class="our-core-values-card special-bg">
      <div class="our-core-values-header">
        {% if section.settings.early_detection_icon != blank %}
          <img
            src="{{ section.settings.early_detection_icon | img_url: 'master' }}"
            alt="{{ section.settings.early_detection_title }}"
            class="our-core-values-icon"
          >
        {% endif %}
        <h5 class="our-core-values-title title2">{{ section.settings.early_detection_title }}</h5>
      </div>
      <p>{{ section.settings.early_detection_desc }}</p>
    </div>

    <div class="our-core-values-card">
      {% if section.settings.immunotherapy_icon != blank %}
        <img
          src="{{ section.settings.immunotherapy_icon | img_url: 'master' }}"
          alt="{{ section.settings.immunotherapy_title }}"
          class="our-core-values-icon"
        >
      {% endif %}
      <h5 class="our-core-values-title title1">{{ section.settings.immunotherapy_title }}</h5>
      <p>{{ section.settings.immunotherapy_desc }}</p>
    </div>
  </div>
</section>

<style>
  .our-core-values {
    margin-top: 7%;
    margin-bottom: 15%;
  }
  .our-core-values-heading, .our-core-values-subtext {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 20px;
  }
  .our-core-values-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    max-width: 1200px;
    margin: 0 auto;
  }
  .our-core-values-card {
    background: #fff;
    padding: 25px;
    border-radius: 35px;
    border: 1px solid #F0652F;
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease-in-out;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
  }
  .special-bg {
    background: #F0652F;
    color: white;
  }
  .our-core-values-header {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
    color:#F0652F;
  }
  .our-core-values-icon {
    max-width: 60px;
    height: auto;
    margin-bottom: 10px;
  }
  .title1 {
    color: #F0652F;
  }
  .title2 {
    color: white;
  }
   @media (max-width: 768px) {
    .our-core-values-container {
      grid-template-columns: 1fr;
      gap: 15px;
      margin:20px;

    }
    .our-core-values-card {
      padding: 20px;
    }
     .our-core-values {
    margin-top: 20%;
    margin-bottom: 20%;
  }
  }
</style>
