{% schema %}
{
  "name": "Info Section",
  "tag": "section",
  "class": "info-section-wrapper",
  "settings": [
    {
      "type": "image_picker",
      "id": "left_bg",
      "label": "Background Image for Left Box"
    },
    {
      "type": "text",
      "id": "left_text",
      "label": "Left Box Text",
      "default": "Our Manufacturing Plants"
    },
    {
      "type": "image_picker",
      "id": "right_bg",
      "label": "Background Image for Right Side"
    },
    {
      "type": "image_picker",
      "id": "right_box_1_bg_icon",
      "label": "Background Icon for First Right Box"
    },
    {
      "type": "image_picker",
      "id": "right_box_2_bg_icon",
      "label": "Background Icon for Second Right Box"
    }
  ],
  "presets": [
    {
      "name": "Info Section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<section class="info-section-wrapper">
  <div class="info-section">
    <!-- Left Side -->
   <div
  class="left-box"
  style="background-image: url({{ section.settings.left_bg | image_url: width: 2000 }});"
>
  <div class="left-overlay"></div>
  <div class="overlay-text">{{ section.settings.left_text }}</div>
</div>

    <!-- Right Side -->
    <div
      class="right-box"
      style="background-image: url({{ section.settings.right_bg | image_url: width: 2000 }});"
    >
      <!-- Box 1 -->
      <div class="info-item">
        <div class="text-content">Product Validations <br> (Certificates)</div>
        {% if section.settings.right_box_1_bg_icon %}
          <img
            src="{{ section.settings.right_box_1_bg_icon | image_url: width: 160 }}"
            class="visible-icon"
            loading="lazy"
            decoding="async"
            alt="Icon 1"
            width="80"
            height="80"
          >
        {% endif %}
      </div>

      <!-- Box 2 -->
      <div class="info-item">
        <div class="text-content">Quality Standards</div>
        {% if section.settings.right_box_2_bg_icon %}
          <img
            src="{{ section.settings.right_box_2_bg_icon | image_url: width: 160 }}"
            class="visible-icon"
            loading="lazy"
            decoding="async"
            alt="Icon 2"
            width="80"
            height="80"
          >
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  .info-section-wrapper {
    padding: 0 20px;
  }

  .info-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    max-width: 1320px;
    margin: auto;
  }

  .left-box {
    position: relative;
    min-height: 350px;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: #fff;
  }

  .left-box::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.3);
    z-index: 1;
  }

  .overlay-text {
    position: relative;
    z-index: 2;
    font-size: 40px;
    font-weight: bold;
    padding: 20px;
  }

  .right-box {
    display: flex;
    flex-direction: column;
    gap: 20px;
    padding: 20px;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
  }

  .info-item {
    position: relative;
    background-color: rgba(255, 255, 255, 0.95);
    min-height: 165px;
    padding: 20px 30px;
    border-radius: 8px;
    overflow: hidden;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .text-content {
    font-size: 30px;
    font-weight: 600;
    color: #000;
    text-align: left;
  }

  .visible-icon {
    width: 90px;
    height: auto;
    object-fit: contain;
    flex-shrink: 0;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .text-content {
      font-size: 26px;
    }

    .visible-icon {
      width: 70px;
    }
  }

  @media (max-width: 768px) {
    .info-section {
      grid-template-columns: 1fr;
    }

    .overlay-text {
      font-size: 30px;
    }

    .text-content {
      font-size: 24px;
    }

    .visible-icon {
      width: 60px;
    }
  }

  @media (max-width: 480px) {
    .overlay-text {
      font-size: 24px;
    }

    .text-content {
      font-size: 20px;
    }

    .visible-icon {
      width: 50px;
    }

    .info-item {
      flex-direction: column;
      gap: 15px;
      text-align: center;
    }

    .text-content {
      text-align: center;
    }
  }
</style>
