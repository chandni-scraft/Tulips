{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-grid-{{ ai_gen_id }} {
    width: 100%;
    max-width: 100%;
    padding: 40px 20px;
    box-sizing: border-box;
  }

  .ai-collection-grid-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-collection-grid-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: 32px;
  }

  .ai-collection-grid-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 12px;
    font-weight: 600;
  }

  .ai-collection-grid-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
  }

  .ai-collection-grid-products-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    width: 100%;
  }

  .ai-collection-grid-product-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  .ai-collection-grid-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .ai-collection-grid-product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: {{ block.settings.image_background }};
  }

  .ai-collection-grid-product-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collection-grid-product-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-collection-grid-product-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-collection-grid-product-info-{{ ai_gen_id }} {
    padding: 16px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-collection-grid-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 8px;
    font-weight: 500;
    line-height: 1.4;
  }

  .ai-collection-grid-product-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-collection-grid-product-title-{{ ai_gen_id }} a:hover {
    text-decoration: underline;
  }

  .ai-collection-grid-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.product_price_color }};
    font-weight: 600;
    margin-bottom: 12px;
  }

  .ai-collection-grid-product-price-compare-{{ ai_gen_id }} {
    text-decoration: line-through;
    opacity: 0.6;
    margin-left: 8px;
    font-size: 14px;
  }

  .ai-collection-grid-add-to-cart-wrapper-{{ ai_gen_id }} {
    margin-top: auto;
  }

  .ai-collection-grid-add-to-cart-{{ ai_gen_id }} {
    width: 100%;
    padding: 12px 20px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-collection-grid-add-to-cart-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-collection-grid-add-to-cart-{{ ai_gen_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .ai-collection-grid-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-collection-grid-empty-state-{{ ai_gen_id }} svg {
    width: 100px;
    height: 100px;
    margin-bottom: 20px;
    opacity: 0.3;
  }

  .ai-collection-grid-empty-message-{{ ai_gen_id }} {
    font-size: 18px;
    color: #999;
  }

  @media screen and (max-width: 989px) {
    .ai-collection-grid-products-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.8 }}px;
    }

    .ai-collection-grid-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
    }

    .ai-collection-grid-{{ ai_gen_id }} {
      padding: 32px 16px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-collection-grid-products-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.6 }}px;
    }

    .ai-collection-grid-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.75 }}px;
    }

    .ai-collection-grid-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }

    .ai-collection-grid-product-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_title_size | times: 0.9 }}px;
    }

    .ai-collection-grid-product-price-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_price_size | times: 0.9 }}px;
    }

    .ai-collection-grid-{{ ai_gen_id }} {
      padding: 24px 12px;
    }

    .ai-collection-grid-product-info-{{ ai_gen_id }} {
      padding: 12px;
    }

    .ai-collection-grid-add-to-cart-{{ ai_gen_id }} {
      padding: 10px 16px;
      font-size: 12px;
    }
  }
{% endstyle %}

<div class="ai-collection-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-collection-grid-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.description != blank %}
      <div class="ai-collection-grid-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-collection-grid-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-collection-grid-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collection != blank %}
      {% assign collection = block.settings.collection %}
      {% assign products_to_show = block.settings.products_limit %}

      {% if collection.products.size > 0 %}
        <div class="ai-collection-grid-products-{{ ai_gen_id }}">
          {% for product in collection.products limit: products_to_show %}
            <div class="ai-collection-grid-product-card-{{ ai_gen_id }}">
              <a href="{{ product.url }}" class="ai-collection-grid-product-image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-collection-grid-product-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% else %}
                  <div class="ai-collection-grid-product-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </a>

              <div class="ai-collection-grid-product-info-{{ ai_gen_id }}">
                <h3 class="ai-collection-grid-product-title-{{ ai_gen_id }}">
                  <a href="{{ product.url }}">{{ product.title }}</a>
                </h3>

                <div class="ai-collection-grid-product-price-{{ ai_gen_id }}">
                  {% if product.compare_at_price > product.price %}
                    <span class="ai-collection-grid-product-price-sale-{{ ai_gen_id }}">
                      {{ product.price | money }}
                    </span>
                    <span class="ai-collection-grid-product-price-compare-{{ ai_gen_id }}">
                      {{ product.compare_at_price | money }}
                    </span>
                  {% else %}
                    {{ product.price | money }}
                  {% endif %}
                </div>

                {% if block.settings.show_add_to_cart %}
                  <div class="ai-collection-grid-add-to-cart-wrapper-{{ ai_gen_id }}">
                    {% if product.available %}
                      {% if product.variants.size == 1 %}
                        <form action="/cart/add" method="post" enctype="multipart/form-data">
                          <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                          <button
                            type="submit"
                            class="ai-collection-grid-add-to-cart-{{ ai_gen_id }}"
                          >
                            {{ block.settings.add_to_cart_text }}
                          </button>
                        </form>
                      {% else %}
                        <a
                          href="{{ product.url }}"
                          class="ai-collection-grid-add-to-cart-{{ ai_gen_id }}"
                          style="display: block; text-align: center; text-decoration: none;"
                        >
                          {{ block.settings.select_options_text }}
                        </a>
                      {% endif %}
                    {% else %}
                      <button
                        class="ai-collection-grid-add-to-cart-{{ ai_gen_id }}"
                        disabled
                      >
                        {{ block.settings.sold_out_text }}
                      </button>
                    {% endif %}
                  </div>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <div class="ai-collection-grid-empty-state-{{ ai_gen_id }}">
          {{ 'collection-1' | placeholder_svg_tag }}
          <p class="ai-collection-grid-empty-message-{{ ai_gen_id }}">This collection is empty</p>
        </div>
      {% endif %}
    {% else %}
      <div class="ai-collection-grid-empty-state-{{ ai_gen_id }}">
        {{ 'collection-1' | placeholder_svg_tag }}
        <p class="ai-collection-grid-empty-message-{{ ai_gen_id }}">Select a collection to display products</p>
      </div>
    {% endif %}
  </div>
</div>

